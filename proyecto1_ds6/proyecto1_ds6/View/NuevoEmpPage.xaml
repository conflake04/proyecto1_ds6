<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyecto1_ds6.View.NuevoEmpPage"
             Title="Agregar empleado">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="BtnGuardar" Text="Guardar" Clicked="BtnGuardar_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label Text="Nombre" FontSize="Medium" TextColor="Black"></Label>
            <Entry x:Name="nombreEntry"/>
            <Label Text="Cedula" FontSize="Medium" TextColor="Black"></Label>
            <Entry x:Name="cedulaEntry"/>
            <Label Text="Salario" FontSize="Medium" TextColor="Black"></Label>
            <Entry x:Name="salarioEntry"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
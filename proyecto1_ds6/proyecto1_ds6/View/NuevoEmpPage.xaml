<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyecto1_ds6.View.NuevoEmpPage"
             Title="Agregar empleado">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="BtnGuardar" Text="Guardar" Clicked="BtnGuardar_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Padding="15,70" BackgroundColor="#B1B1B1">
            <Label Text="Nombre" TextColor="#003C43" FontSize="20" FontAttributes="Bold"></Label>
            <Entry x:Name="nombreEntry" FontSize="Medium" TextColor="Black"/>
            <Label Text="Cedula" TextColor="#003C43" FontSize="20" FontAttributes="Bold"></Label>
            <Entry x:Name="cedulaEntry" FontSize="Medium" TextColor="Black"/>
            <Label Text="Salario" TextColor="#003C43" FontSize="20" FontAttributes="Bold"></Label>
            <Entry x:Name="salarioEntry" FontSize="Medium" TextColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
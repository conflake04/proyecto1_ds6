<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#003C43"
             NavigationPage.HasNavigationBar="False"
             x:Class="proyecto1_ds6.View.PlantillaPage">


    <ContentPage.Content>
        <ListView x:Name="DetallesE" HasUnevenRows="True" BackgroundColor="White" ItemSelected="lista_empleados_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="15,40" >
                            <Label Text="{Binding nombre}" TextColor="black"></Label>
                            <Label Text="{Binding cedula}" TextColor="Black"></Label>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>